# Security Configuration Environment Variables
# Copy this file to .env and customize as needed

# ===========================================
# SECURITY MASTER TOGGLE
# ===========================================

# Enable or disable all security middleware
# Set to 'false' to disable security features (development/testing only)
# Default: true (security enabled)
SECURITY_ENABLED=true

# ===========================================
# HTTPS CONFIGURATION
# ===========================================

# Enable HTTPS server
# Set to 'true' to enable HTTPS
# Default: false (HTTP only)
HTTPS_ENABLED=false

# Path to SSL private key file
# Required when HTTPS_ENABLED=true
SSL_KEY_PATH=./certs/key.pem

# Path to SSL certificate file
# Required when HTTPS_ENABLED=true
SSL_CERT_PATH=./certs/cert.pem

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins for cross-origin requests
# Comma-separated list of allowed origins
# Leave empty to deny all cross-origin requests (default)
# Example: http://localhost:3001,https://example.com
CORS_ORIGINS=

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================

# Time window in milliseconds for rate limiting
# Default: 900000 (15 minutes)
RATE_WINDOW_MS=900000

# Maximum requests per window per IP
# Default: 100
RATE_LIMIT=100
